<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:OpenRails_HID_Tester.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="OpenRails_HID_Tester.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="OpenRails_HID_Tester"
        CanResize="False"
        Height="600"
        Width="800">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <StackPanel Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Left">
	    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,5,0,0">
            <Button Click="ConnectHIDDevice">Connect</Button>
		    <TextBlock Text="Device status: " Margin="5" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding DeviceStatus}" Foreground="{Binding DeviceStatusBrush}" Margin="5" VerticalAlignment="Center"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,5,0,0">
            <TextBlock Text="Pantograph 1:" Margin="5" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding Panto1Status}" Foreground="{Binding Panto1StatusBrush}" Margin="5" VerticalAlignment="Center"/>
            <TextBlock Text="Pantograph 2:" Margin="5" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding Panto2Status}" Foreground="{Binding Panto2StatusBrush}" Margin="5" VerticalAlignment="Center"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,5,0,0">
            <TextBlock Text="Headlights: " Margin="5" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding HeadlightsStatus}" Foreground="{Binding HeadlightsStatusBrush}" Margin="5" VerticalAlignment="Center"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,5,0,0">
            <TextBlock Text="Pause: " Margin="5" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding PauseStatus}" Foreground="{Binding PauseStatusBrush}" Margin="5" VerticalAlignment="Center"/>
            <TextBlock Text="View: " Margin="5" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding ViewStatus}" Margin="5" VerticalAlignment="Center"/>
            <TextBlock Text="Station Monitor: " Margin="5" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding StationMonitorStatus}" Foreground="{Binding StationMonitorStatusBrush}" Margin="5" VerticalAlignment="Center"/>
            <TextBlock Text="Track Monitor: " Margin="5" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding TrackMonitorStatus}" Foreground="{Binding TrackMonitorStatusBrush}" Margin="5" VerticalAlignment="Center"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,5,0,0">
            <TextBlock Text="Direction: " Margin="5" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding DirectionStatus}" Foreground="{Binding DirectionStatusBrush}" Margin="5" VerticalAlignment="Center"/>
            <TextBlock Text="Throttle: " Margin="5" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding ThrottleStatus}" Foreground="{Binding ThrottleStatusBrush}" Margin="5" VerticalAlignment="Center"/>
            <TextBlock Text="Engine Brake: " Margin="5" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding EngineBrakeStatus}" Foreground="{Binding EngineBrakeStatusBrush}" Margin="5" VerticalAlignment="Center"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,5,0,0">
            <TextBlock Text="Train Brake: " Margin="5" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding TrainBrakeStatus}" Foreground="{Binding TrainBrakeStatusBrush}" Margin="5" VerticalAlignment="Center"/>
        </StackPanel>

        <Grid Width="800" Height="200" HorizontalAlignment="Center" Margin="0,20,0,0">
            <!-- Base train -->
            <Image Source="avares://OpenRails-HID-Tester/Assets/TrainBase.png" Width="500"/>

            <!-- Pantograph 1 -->
            <Image Source="{Binding Panto1Image}" Width="50" Height="50"
                   Margin="{Binding Panto1Margin}" HorizontalAlignment="Left" VerticalAlignment="Top"/>

            <!-- Pantograph 2 -->
            <Image Source="{Binding Panto2Image}" Width="50" Height="50"
                   Margin="{Binding Panto2Margin}" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        </Grid>
    </StackPanel>

</Window>
